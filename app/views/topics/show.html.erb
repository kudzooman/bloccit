<h1><%= @topic.name %></h1>

<div class="col-md-6">
    <% if policy(Post.new).create? %>
      <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-primary btn-sm' %>
      <% end %>
    <% if policy(@topic).destroy? %>
      <%= link_to "Vaporize!", @topic, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Final answer? Cause this topic is about to be real gone.'} %>
    <% end %>
    <% if policy(@topic).update? %>
    <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-warning btn-sm' %>
  <% end %>
  </div>

<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @topic.description %></p>
    <% @posts.each do |post| %>
      <div class="media">
        <%= render partial: 'votes/voter', locals: { topic: @topic, post: post } %>
        <div class="media_body">
          <h4 class= "media-heading">
            <%= link_to (markdown post.title), [@topic, post] %>
          </h4>
          <small>
            <%= image_tag(post.user.avatar.tiny.url) if post.user.avatar? %>
            submitted <%= time_ago_in_words(post.created_at) %> ago by 
            <%= post.user.name %><br/>
            <%= post.comments.count %> Comments
          </small>
        </div>
      </div>
    <% end %>
    <%= will_paginate @posts %>
  </div>
  <div class="col-md-4">
    <%= link_to "Back to Topics", topics_path(@topic), class: 'btn btn-primary btn-lg' %>
  </div>
</div>

